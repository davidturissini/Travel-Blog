<header id="user-header" class="autoclear">
	<% if @user_trips %>
		<nav id="trips-nav"<%= ' data-current="'.html_safe + @user.trips.index(@trip).to_s + '"'.html_safe if @trip %> >
			<ul>
				<% @user_trips.each do |trip| %>
					<li>
						<%= link_to user_trip_path(:user_id => trip.user.slug, :id => trip.slug), :title => trip.title, :class => "trip-link" do %>
							<img src="<%= trip.picture.square %>" alt="<%= trip.title %>" />
						<% end %>
					</li>
				<% end %>
			</ul>
		</nav>
	<% end %>
	<%= link_to user_path(user.slug), :class => "user-link" do %>
		<img src="<%= user.photo.large %>" class="shadow rounded user-image" />
		<h1 id="user" data-json="<%= user.to_json %>"><%= user.name %></h1>
	<% end %>
</header>