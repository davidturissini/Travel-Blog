<header id="user-header" class="autoclear">
	<% if @user_trips %>
		<nav id="trips-nav">
			<ul>
				<% @user_trips.each do |trip| %>
					<li><a href="#"><img src="<%= trip.picture.square %>" /></a></li>
				<% end %>
			</ul>
		</nav>
	<% end %>
	<%= link_to user_path(user.slug), :class => "user-link" do %>
		<img src="<%= user.photo.large %>" class="shadow rounded user-image" />
		<h1 id="user" data-json="<%= user.to_json %>"><%= user.name %></h1>
	<% end %>
</header>