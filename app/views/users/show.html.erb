<% if current_user === @user %>
	<aside class="clear center">
		<%= render "admin/global/create_new_link",
			:text => "Create new trip",
			:url => new_user_trip_path(current_user.slug)
		%>
	</aside>
<% end %>

<section id="trips">
	<% @user_trips.keys.sort.reverse.each do |year| %>
		<section class="year content-grid two-col">
			<header class="row">
				<h1 class="year-title"><%= year %></h1>
				<h2 class="trips-count"><%= pluralize(@user_trips[year].length, 'Trip') %></h2>
			</header>
			<div class="autoclear">
				<% @user_trips[year].each do |trip| %>
					<%= render "global/trip_grid", :trip => trip %>
				<% end %>
			</div>
		</section>
	<% end %>
</section>