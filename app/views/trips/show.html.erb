<article id="trip" class="<%= "inline-form " if current_user.owns?(@trip) %>autoclear grid-20-75" data-user="<%= @trip.user.to_json %>" data-json="<%= @trip.to_json %>" data-maps="<%= @trip.maps.to_json %>" data-locations="<%= @trip.locations.to_json %>">
	<%= render "admin/trips/footer", :trip => @trip, :trip_photos => @photos %>
	<section class="pad-down">
		<% if current_user.owns?(@trip) %>
			<%= render "admin/global/create_new_link",
				:text => "Add Journal",
				:url => new_user_trip_journal_path(:user_id => @trip.user.slug, :trip_id => @trip.slug) %>
		<% end %>
		<% @trip.journals.each do |journal| %>
			<article class="journal">
				<% if journal.title %>
					<%= link_to user_trip_journal_path(:user_id => journal.user.slug, :trip_id => journal.trip.slug, :id => journal.slug || journal.id) do %>
						<h1 class="journal-title"><%= journal.title %></h1>
					<% end %>
				<% end %>
				<div class="journal-body"><%= journal.body.html_safe %></div>
				<% if current_user.owns?(journal) %>
					<%= link_to "Edit", edit_user_trip_journal_path(:user_id => journal.user.slug, :trip_id => journal.trip.slug, :id => journal.slug || journal.id) %>
				<% end %>
			</article>
		<% end %>
	</section>
</article>
