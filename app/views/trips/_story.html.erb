<article class="story trip">
	<%= link_to user_trip_path(:user_id => story.user.slug, :id => story.slug), :class => "autoclear story-link" do %>
		<img class="story-image" src="<%= story.picture.url(:widescreen) %>" alt="" />
		<h2 class="story-date"><%= story.date_string %></h2>
		<h1 class="story-title"><%= story.title %></h1>
		<div class="story-body">
			<p><%= story.summary %></p>
		</div>
	<% end %>
</article>