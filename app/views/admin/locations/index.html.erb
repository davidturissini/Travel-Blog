<div id="trip">
	<%= render "admin/global/breadcrumb", :trip => @trip, :page => "All Locations" %>
	<%= render "admin/global/create_new_link",
		:url => edit_trip_locations_path(:trip_id => @trip.slug),
		:text => "Add locations"
		%>
	<section id="trip-locations">
		<% @locations.each do |location| %>
			<article>
				<h1><%= location.smart_title %></h1>
				<img src="<%= location.picture.url %>" width="100" height="100" />
				<%= link_to "Edit", admin_edit_location_path(@trip.slug, location.slug), :class => "edit-link" %>
			</article>
		<% end %>
	</section>
</div>