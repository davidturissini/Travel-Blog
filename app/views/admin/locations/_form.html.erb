<article id="location" class="form" data-json="<%= location.to_json %>">
	<header class="autoclear">
		<div class="location-photo left">
			<img src="<%= @location.picture.url %>" width="200" class="rounded" />
			<a href="#" class="rounded" id="change-location-photo">Change photo</a>
		</div>
		<h1 id="page-title"><input type="text" id="location-title" placeholder="Title" value="<%= location.title %>" /></h1>
		<h2>
			<% if !location.new_record? %>
				in
			<% end %>
			<span id="location-geo"><%= location.geo_string %><span>
		</h2>
	</header>
	<% if !location.new_record? %>
		<section id="photos" class="rounded">
			<% if location.photos.count > 0 %>
				<%= link_to "Photos", photos_edit_path(location), :class => "rounded" %>
			<% else %>
				<%= link_to "Add Photos", new_location_photos_path(location), :class => "rounded" %>
			<% end %>
		</section>
		<section id="maps" class="rounded">
			<% if location.maps.count > 0 %>
				<%= link_to "Edit Maps", "#", :class => "rounded" %>
			<% else %>
				<%= link_to "Add Maps", "#", :class => "rounded" %>
			<% end %>
		</section>
	<% end %>
	<section id="geo">
		<figure class="clear rounded">
			<div id="map" class="clear rounded"></div>
			<figcaption>
				<a id="edit-location" href="#">Edit Location</a>
				<input type="button" id="map-edit-done" value="Done Editing Map" />
			</figcaption>
		</figure>
		
	</section>
	<% if !location.new_record? %>
		<a id="delete-location" class="remove">X</a>
	<% end %>
</article>