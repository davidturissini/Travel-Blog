<section id="user" class="user-welcome" data-json="<%= @user.to_json %>" data-realms="<%= @user.realm_accounts.to_json %>">
    <header id="user-header" class="autoclear">
        <div class="user-picture">
			<%= image @user.photo.url, :class => "rounded user-image", :width => 80 %>
			<a class="user-button user-image-button rounded">Change Picture</a>
		</div>
        <h1 id="page-title">Hello, <%= @user.name %></h1>
        <%= render "admin/global/create_new_link", 
            :text => "Add a trip", 
            :url => new_trip_path %>
    </header>
    <section id="user-trips" class="content-grid two-col">
        <% current_user.trips.each do |trip| %>
        	<article class="trip content" data-json="<%= trip.to_json %>">
                <form class="inline-form">
                	<h1><textarea class="field trip-title"><%= trip.title %></textarea></h1>
                    <%= render "admin/global/date_fields", :obj => trip, :type => "trip" %>
                    <% if trip.picture %>
                        <img src="<%= trip.picture.url %>" />
                    <% end %>
                    <a class="remove"></a>
                    <%= link_to "", admin_trip_path(trip), :class => "trip-link" %>
                </form>
            </article>
        <% end %>
    </section>
</section>