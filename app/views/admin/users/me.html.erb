<section id="user" class="admin-user-show" data-json="<%= @user.to_json %>" data-realms="<%= @user.realm_accounts.to_json %>">
    <section id="user-trips" class="content-grid two-col">
        <% current_user.trips.each do |trip| %>
        	<article class="trip content" data-json="<%= trip.to_json %>">
            	<h1><%= trip.title %></h1>
                <section class="date-field no-outline">
                    <%= trip.date_string %>
                </section>
                <% if trip.picture %>
                    <img src="<%= trip.picture.large %>" />
                <% end %>
                <%= link_to "", admin_trip_path(trip), :class => "content-link trip-link" %>
            </article>
        <% end %>
    </section>
</section>