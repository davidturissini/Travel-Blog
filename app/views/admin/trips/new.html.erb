<h1 id="page-title" class="pad">Add a new trip</h1>
<article id="trip" class="pad-down">
	<form>
		<section id="form-message"></section>
		<input type="text" id="trip-title" placeholder="Title" />
		<%= render "admin/global/date_fields", :obj => @trip, :type => "trip" %>
		<p class="note">Click on the map to add a new location. Click and drag a marker to change a location. Click a marker to edit or delete a location.</p>
		<figure id="google-map"></figure>
		<footer class="buttons">
			<input type="submit" class="button" id="trip-save" value="Save" />
		</footer>
	</form>
</article>