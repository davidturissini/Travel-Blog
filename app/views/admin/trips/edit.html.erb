<article id="trip" data-json="<%= @trip.to_json %>" data-locations="<%= @trip.locations.to_json %>">
	<header class="autoclear">
		<figure id="trip-photo" class="left">
			<% if @trip.picture %>
				<img src="<%= @trip.picture.url %>" width="200" class="rounded" id="trip-image" />
			<% end %>
			<% if @trip.photos.length > 0 %>
				<figcaption>
					<a href="#" class="rounded" id="change-trip-photo">Change photo</a>
				</figcaption>
			<% end %>
		</figure>
		<h1 id="page-title"><input type="text" id="trip-title" value="<%= @trip.title %>" /></h1>
		<a id="trip-delete" class="remove">X</a>
	</header>
	<section id="photos" class="rounded">
		<% if @trip.photos.count > 0 %>
			<%= link_to photos_edit_path(@trip), :class => "rounded" do %>
				<h1>Photos</h1>
				<% @trip_photos.each do |photo| %>
					<div class="image">
						<img src="<%= photo.small %>" />
					</div>
				<% end %>
			<% end %>
		<% else %>
			<%= link_to "<h1>Add Photos</h1>".html_safe, trip_photos_new_path(@trip.slug), :class => "rounded" %>
		<% end %>
	</section>
	<section id="maps" class="rounded">
		<% if @trip.maps.count > 0 %>
			<%= link_to "<h1>Maps</h1>".html_safe, maps_path(@trip), :class => "rounded" %>
		<% else %>
			<%= link_to "<h1>Add a Map</h1>".html_safe, new_map_path(@trip), :class => "rounded" %>
		<% end %>
	</section>
	<section id="maps" class="rounded">
		<h1>Blog posts</h1>
	</section>
	<section id="geo" class="rounded">
		<figure id="trip-map" class="clear rounded"></figure>
		<h1><%= link_to "Locations", edit_trip_locations_path(:trip_id => @trip.slug) %></h1>
	</section>
	<a id="delete-location" class="remove">X</a>
</article>