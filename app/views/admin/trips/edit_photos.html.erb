<section id="trip" data-json="<%= @trip.to_json %>">
	<h1 id="page-title">Manage photos</h1>
	<%= link_to "Add photos", new_trip_photos_path(@trip) %>
	<p id="server-messages"></p>
	<section id="trip-photos" data-json="<%= @trip.photos.to_json %>">
		<% @trip.photos.each do |photo| %>
			<figure class="photo" id="photo-<%= photo.id %>">
				<div class="image-wrapper">
					<a class="remove">X</a>
					<img src="<%= photo.url %>" width="200" w />
				</div>
				<figcaption>
					<input type="text" value="<%= photo.title %>" placeholder="Title" class="title" />
					<textarea placeholder="Description" class="description"><%= photo.description %></textarea>
				</figcaption>
			</figure>
		<% end %>
		<% if @trip.photos.count > 0 %>
			<footer class="buttons">
				<input type="button" class="save" value="Save photos for <%= @trip.title %>" />
			</footer>
		<% end %>
	</section>
</section>